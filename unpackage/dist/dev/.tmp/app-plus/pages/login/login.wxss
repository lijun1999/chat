.content {
  padding-top: var(--status-bar-height);
}
.top-bar {
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar-height);
  background: #ffffff;
}
.top-bar .top-bar-right {
    padding-right: 32rpx;
    float: right;
}
.top-bar .top-bar-right .text {
      font-size: 32rpx;
      line-height: 88rpx;
}
.logo {
  text-align: center;
}
.logo image {
    padding-top: 256rpx;
    width: 194rpx;
    height: 91rpx;
    margin: 0 auto;
}
.login-box {
  padding: 54rpx 48rpx 120rpx;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.login-box .title {
    font-size: 56rpx;
    font-weight: 500;
    color: #272832;
    line-height: 80rpx;
}
.login-box .slogan {
    font-size: 40rpx;
    color: #f3f4f6;
    line-height: 56rpx;
}
.login-box .login-form {
    padding-top: 40rpx;
}
.login-box .login-form input {
      height: 88rpx;
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
      border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.login-box .login-form .pw {
      padding-top: 10rpx;
}
.login-box .tip {
    float: left;
    font-size: 32rpx;
    color: #ff5d5b;
    line-height: 56rpx;
}
.login-button {
  margin: 0 auto;
  width: 520rpx;
  height: 96rpx;
  background: #ffe431;
  -webkit-box-shadow: 0px 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
          box-shadow: 0px 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #272832;
  line-height: 96rpx;
  text-align: center;
}

